{
    "name": "@niknak/app-docker",
    "scripts": {
        "dev": "esr ../scripts/main.ts --watch",
        "build": "esr ../scripts/main.ts",
        "typeorm": "typeorm-ts-node-esm",
        "migration:generate": "npx typeorm-ts-node-esm migration:generate ./migrations/schema-update -d ../datasource.js --outputJs",
        "migration:run": "npx typeorm-ts-node-esm migration:run  -d ../datasource.js"
    },
    "devDependencies": {
        "esbuild": "^0.24.2",
        "esbuild-plugin-tsc": "^0.4.0",
        "esbuild-runner": "^2.2.2"
    }
}
